@page "/"

<Container Class="my-5">
    <Card>
        <CardHeader>
            <h1 class="text-center">Zarządzanie Samochodami w Firmie</h1>
        </CardHeader>
    </Card>

    <Card>
        <CardBody>
            <h2>Informacje o Firmie</h2>
            <p>Tutaj znajdziesz informacje o naszej firmie zajmującej się zarządzaniem flotą samochodową. Jesteśmy specjalistami w dziedzinie transportu i oferujemy szeroki wybór samochodów dla Twojej firmy.</p>
        </CardBody>
    </Card>

    <Card>
        <CardBody>
            <h2>Dostępne Samochody</h2>
            <div class="row">
                @foreach (var car in cars)
                {
                    <div class="col-md-6">
                        <Card>
                            <CardImage src="@car.ImageUrl" alt="@car.Name" />
                            <CardBody>
                                <h5 class="card-title">@car.Name</h5>
                                <p class="card-text">@car.Description</p>
                            </CardBody>
                        </Card>
                    </div>
                }
            </div>
        </CardBody>
    </Card>
</Container>

@code {
    private class Car
    {
        public string Name { get; set; }
        public string Description { get; set; }
        public string ImageUrl { get; set; }
    }

    private List<Car> cars = new List<Car>
    {
        new Car
        {
            Name = "Samochód 1",
            Description = "Opis samochodu 1. Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
            ImageUrl = "car1.jpg"
        },
        new Car
        {
            Name = "Samochód 2",
            Description = "Opis samochodu 2. Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
            ImageUrl = "car2.jpg"
        }
        // Dodaj więcej samochodów według potrzeb
    };
}